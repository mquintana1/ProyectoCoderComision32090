<% if(messages.length){ %>
    <% for (const message of messages) {%>
<li style="width:100%"><strong style="color:blue;display:inline;"><%=message.author.alias%></strong> - <p style='color:brown;display:inline;'><%=message.author.date%></p> <i style='color:green;display: block; overflow-wrap: break-word'><%=message.text%></i><img width=50px height=50px src=<%=message.author.avatar%>></li>
<%}%>
<% } else { %>
    <li> Sin mensajes... Inserte el primer mensaje.</li>
    <% } %>